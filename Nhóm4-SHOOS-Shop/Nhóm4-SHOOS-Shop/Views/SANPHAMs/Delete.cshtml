@model Nhóm4_SHOOS_Shop.Models.SANPHAM

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="mx-auto my-4 border-3 p-4 shadow-sm" style="border-radius: 20px; width: 60%">
    <h4>Xoá sản phẩm</h4><hr />
    <div class=" fw-bold">
        Tên sản phẩm
    </div>
    <div>
        @Html.DisplayFor(model => model.TENSP)
    </div>
    <div class="d-flex flex-row my-2">
        <div class=" fw-bold">
            Thương hiệu
        </div>
        <div style="margin-left:.5em; margin-right: 3em">
            @Html.DisplayFor(model => model.THUONGHIEU.TENTH)
        </div>
        <div class=" fw-bold">
            Nhà cung cấp
        </div>
        <div style="margin-left:.5em; margin-right: 3em">
            @Html.DisplayFor(model => model.NHACUNGCAP.TENNCC)
        </div>
    </div>
    <div class="d-flex flex-row my-2">
        <div class=" fw-bold">
            Màu sắc
        </div>
        <div style="margin-left:.5em; margin-right: 3em">
            @Html.DisplayFor(model => model.MAUSAC)
        </div>
        <div class=" fw-bold">
            Kích cỡ
        </div>
        <div style="margin-left:.5em; margin-right: 3em">
            @Html.DisplayFor(model => model.KICHCO)
        </div>
        <div class=" fw-bold">
            Số lượng
        </div>
        <div style="margin-left:.5em; margin-right: 3em">
            @Html.DisplayFor(model => model.SL)
        </div>
    </div>
    <div class=" fw-bold">
        Hình
    </div>
    <div>
        <img src="~/Images/@Html.DisplayFor(model => model.HINH)" class="w-25" />
    </div>
    <div class=" fw-bold">
        Giá
    </div>
    <div>
        @Html.DisplayFor(model => model.GIA)
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions form-group my-3 d-flex flex-row">
            <input type="submit" value="Delete" class="btn btn-danger" />
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary mx-3" })
        </div>
    }
</div>
