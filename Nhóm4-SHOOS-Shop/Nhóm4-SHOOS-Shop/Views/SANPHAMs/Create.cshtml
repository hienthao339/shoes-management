@model Nhóm4_SHOOS_Shop.Models.SANPHAM

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm(null, "SANPHAMs", FormMethod.Post,
                                   new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
<div class="form-horizontal w-50 mx-auto my-4 border-3 p-4 shadow-sm" style="border-radius: 20px">
    <h4>Thêm sản phẩm</h4><hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="my-2 fw-bold">Tên sản phẩm</div>
        <div class="col">
            @Html.EditorFor(model => model.TENSP, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TENSP, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="my-2 fw-bold">Tên thương hiệu</div>
        <div class="col">
            @Html.DropDownList("MATH", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.MATH, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="my-2 fw-bold">Tên nhà cung cấp</div>
        <div class="col">
            @Html.DropDownList("MANCC", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.MANCC, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="my-2 fw-bold">Màu sắc</div>
        <div class="col">
            @Html.EditorFor(model => model.MAUSAC, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MAUSAC, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="my-2 fw-bold">Kích cỡ</div>
        <div class="col">
            @Html.EditorFor(model => model.KICHCO, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.KICHCO, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="my-2 fw-bold">Số lượng</div>
        <div class="col">
            @Html.EditorFor(model => model.SL, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SL, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="my-2 fw-bold">Mô tả</div>
        <div class="col">
            @Html.EditorFor(model => model.MOTA, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MOTA, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="my-2 fw-bold">Hình</div>
        <div class="col">
            <input type="file" id="uploadhinh" name="uploadhinh" accept="/*" />
        </div>
    </div>

    <div class="form-group">
        <div class="my-2 fw-bold">Giá</div>
        <div class="col">
            @Html.EditorFor(model => model.GIA, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.GIA, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group my-3 d-flex flex-row">
        <input type="submit" value="Create" class="btn btn-primary" />
        <div>
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-danger mx-3" })
        </div>
    </div>
</div>
}


