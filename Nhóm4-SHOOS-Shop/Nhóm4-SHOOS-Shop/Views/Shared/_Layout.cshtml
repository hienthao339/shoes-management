<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css" rel="stylesheet" />
    <link href="~/Assets/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
</head>
<body>
    <div class="navbar navbar-expand-lg navbar-dark bg-dark px-4 shadow-lg justify-content-around" style="font-size: 15px">
        <a class="navbar-brand fw-bolder fs-5" href="#">SHOOS</a>
        <div class="collapse navbar-collapse" id="topnavbar">
            <ul class="navbar-nav">
                @Html.ActionLink("Sản phẩm", "Index", "SANPHAMs", null, new { @class = "nav-link text-decoration-none" })
                @Html.ActionLink("Thương hiệu", "Index", "THANHTOANs", null, new { @class = "nav-link text-decoration-none" })
                @Html.ActionLink("Nhà cung cấp", "Index", "NHACUNGCAPs", null, new { @class = "nav-link text-decoration-none" })
                @Html.ActionLink("Khuyến mãi", "Index", "KHUYENMAIs", null, new { @class = "nav-link text-decoration-none" })
                @Html.ActionLink("Khách hàng", "Index", "KHACHHANGs", null, new { @class = "nav-link text-decoration-none" })
                @Html.ActionLink("Nhân viên", "Index", "NHANVIENs", null, new { @class = "nav-link text-decoration-none" })
                @Html.ActionLink("Tài xế", "Index", "TAIXEs", null, new { @class = "nav-link text-decoration-none" })
                @Html.ActionLink("Đặt hàng", "Index", "DATHANGs", null, new { @class = "nav-link text-decoration-none" })
                @Html.ActionLink("Giao hàng", "Index", "GIAOHANGs", null, new { @class = "nav-link text-decoration-none" })
                @Html.ActionLink("Hoá đơn", "Index", "HOADONs", null, new { @class = "nav-link text-decoration-none" })
            </ul>
        </div>
        <div>
            <ul class="navbar-nav mx-auto">
                <li class="nav-item">
                    <div class="nav-link d-flex flex-row align-items-center">
                        <a href="@Url.Action("Index", "Home")" class="text-light">
                            <i class="fa-solid fa-user"></i>
                        </a>
                    </div>
                </li>
            </ul>
        </div>
    </div>
    <div class="m-4">
        @RenderBody()
    </div>
    <div class="text-light shadow-lg py-4 justify-content-between" style="background: #000000; font-size: 18px">
        <div class="container-fluid row">
            <div class="col d-flex flex-column">
                <h5 class="mb-3">Trợ giúp</h5>
                <div class="mb-1">Trung tâm trợ giúp</div>
                <div class="mb-1">Chính sách bảo mật</div>
                <div class="mb-1">Điều khoản sử dụng</div>
            </div>
            <div class="col d-flex flex-column">
                <h5 class="mb-3">Cửa hàng</h5>
                <div class="mb-1">Về chúng tôi</div>
                <div class="mb-1">Tuyển dụng</div>
            </div>
            <div class="col d-flex flex-column">
                <h5 class="mb-3">Đối tác kinh doanh</h5>
                <div class="mb-1">ABC Company</div>
                <div class="mb-1">Agoda</div>
                <div class="mb-1">Nu'flit</div>
            </div>
            <div class="col d-flex flex-column">
                <h5 class="mb-3">Liên hệ</h5>
                <div class="mb-1">
                    Địa chỉ: 54 Bình Thới TP. HCM
                </div>
                <div class="mb-1">
                    Hotline: (028) 38.632.052
                </div>
            </div>
        </div>
    </div>
    <footer class="py-3 bg-dark text-light mt-auto shadow-lg" style="font-size: 18px">
        <div class="container-fluid px-4">
            <div class="d-flex align-items-center justify-content-between small">
                <div class="fw-bold">Copyright &copy; SHOOS SHOP - @DateTime.Now.Year</div>
                <div class="d-flex flex-row">
                    <div>Privacy Policy</div>
                    <div class="mx-2">&middot;</div>
                    <div>Terms &amp; Conditions</div>
                </div>
            </div>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/Assets/js/scripts.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
    <script src="~/Assets/js/datatables-simple-demo.js"></script>
    <script src="~/Assets/js/datatables-simple-demo.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" crossorigin="anonymous"></script>
    <script src="~/Assets/js/datatables-simple-demo.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
